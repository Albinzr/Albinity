nav
    height 80px
    ::-webkit-input-placeholder { /* Chrome/Opera/Safari */
      color: rgba(37, 35, 35, 0.33);
    }
    ::-moz-placeholder { /* Firefox 19+ */
      color: rgba(37, 35, 35, 0.33);
    }
    :-ms-input-placeholder { /* IE 10+ */
      color: rgba(37, 35, 35, 0.33);
    }
    :-moz-placeholder { /* Firefox 18- */
      color: rgba(37, 35, 35, 0.33);
    }
.navbar
    width: 100%
    position: fixed
    top 0
    left 0
    height 80px
    background-color: #fff
    border-bottom: 1px solid #eee;
    z-index: 1
.inner-navbar
    max-width: 950px
    width:95%
    height: 80px
    margin: 0 auto;
    position: relative;
.logo
    min-width 170px
    width 20%
    height: 80px
    float: left

.header-menu
    font-family: 'global';
    float: left;
    width 40%
    min-width: 265px
    // margin 0 0 0 35px
    ul
        float: left;
        margin 0
        padding: 0
        list-style: none;
        li
            float: left;
            position:  relative;
            height: 80px
            margin 0 10px 0 10px
            padding 0
            font-size: 12px
            text-transform: uppercase;
            color #838383
            line-height: 80px
            cursor pointer
            span
                font-family: 'global';
                letter-spacing: 0.33em;
                font-weight: 400
                height: 80px
                cursor pointer
                // display block
            .category-menu
                position absolute
                height auto
                background-color white
                -webkit-box-shadow: 0px 5px 10px 1px rgba(0,0,0,0.2);
                box-shadow: 0px 5px 10px 1px rgba(0,0,0,0.2);
                max-height:400px
                overflow scroll
                display none
                min-width 510px
                ul
                    padding-left 30px
                    padding-right 30px
                    padding-top 15px
                    padding-bottom 15px
                    -webkit-transition: display 2s ease-out;
                    li

                        width calc((100% / 3))
                        margin 0 auto
                        line-height 1.6
                        text-align left
                        height 30px
                        a
                          font-family: 'global';
                          text-decoration none
                          color #838383
                          letter-spacing: 0.33em
                          font-weight: 400
                          cursor pointer
                          &:hover
                            text-decoration:underline
.social
    float: left;
    min-width: 85px
    width 15%
    margin: 31px 0 0 0
    li
        float left
        display block
        margin 0 15px 0 0
        color #838383
        text-decoration: none;
        cursor pointer
        &:hover
            color black
.search
    float: right;
    width: 20%
    min-width: 150px
    margin 29px 0 0 0
    li:nth-child(1)
        float: left;
        display: block;
        width: 16px
        color #838383
    li:nth-child(2) input
        // float: left
        border none
        width 110px
        padding 0
        border-left: 1px solid #838383;
        background-color: transparent;
        color: #838383;
        padding: 0 0 0 10px;
        margin-left 5px
        font-family: 'global';
        font-size: 12px;
        letter-spacing: 0.33em
