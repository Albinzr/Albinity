.post-header
    width: 100%
    padding: 25px 0 18px;
    background-color: #f8f8f8;
    position: relative;
    font-family: 'merriweather-sans-light';
    line-height: 1.58;


    .post-data
        width: 100%;
        text-align: center;
        color: #C0BCBC;
        font-family 'opensans-light'
        font-size 13px
        position: relative;
        overflow: hidden;
        &:before,&:after
            position: absolute;
            top: 51%;
            overflow: hidden;
            width: 5%;
            height: 1px;
            content: '\a0';
            background-color: #e7e7e7;
        &:before
            margin-left: -5%;
            text-align: right;


    .post-title
        width: 100%;
        text-align: center;
        padding: 3px 0;
        color: #000;
        font-size: 37px;
        text-transform: uppercase;
        font-family: 'merriweather-sans-light';
        letter-spacing: 0.2em;
        font-weight: 400;
        font-size 37px
        font-weight bolder

    .post-category
        width: 100%;
        text-align: center;
        margin: 0 0 0 0;
        color: #C0BCBC;
        font-size 13px


.post-container
    width 95%
    max-width:  950px
    margin 0 auto
    .post-media
        overflow: hidden
        max-width:950px
    img
        background-color: lightGray
        margin 0 auto
        width:100%
    .post-summary
        width: 100%;
        text-align: center;

        p
            padding: 0 200px;
            font-size: 15px;
            font-style: italic;
            font-weight: 400;
            line-height: 1.35;
            letter-spacing: 0.02em;
            margin 30px 0

    .post-more-details
        height: 40px
        margin: 0 auto;
        display: table;

        .post-share
            float: left;
            padding-left 10px
            li
                float: left;
                padding: 10px 0px
                padding-left 10px
                color: #C0BCBC;
                text-transform: uppercase;
                font-family: 'merriweather-sans-light';
                letter-spacing: 0.3em;
                font-size: 12px;
                font-weight: 400;

    .post-continue-reading
        float: left;
        padding-left 10px

        li
            display: block;
            border: 1px solid #e9e9e9;
            padding: 7px 33px;
            text-transform: uppercase;
            text-decoration: none;
            font-family: 'merriweather-sans-light';
            letter-spacing: 0.2em;
            font-size: 12px;
            font-weight: 400;
            color: #000;

    .post-comments
        float: left;
        padding-left 10px

        li
            float: left;
            padding: 10px 0px
            padding-left 10px
            color: #C0BCBC;
            text-transform: uppercase;
            font-family: 'merriweather-sans-light';
            letter-spacing: 0.3em;
            font-size: 12px;
            font-weight: 400;
